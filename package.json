{
  "name": "commitsafe",
  "version": "1.0.0",
  "description": "commitsafe is a CLI tool to help you not to worry about exposing your secrets in your .env files when you commit them to your repository",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "commitsafe": "dist/index.js"
  },
  "scripts": {
    "build": "npx tsc",
    "test": "bun run build && node dist/index.js -e",
    "test:encrypt": "bun run build && node dist/index.js -e .env .env.local",
    "test:decrypt": "bun run build && node dist/index.js -d .env .env.local",
    "list": "bun run build && node dist/index.js -l .env .env.local",
    "release": "bun run build && npx np --no-tests",
    "prepare": "bunx simple-git-hooks > /dev/null 2>&1"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "dependencies": {
    "@inquirer/password": "^2.1.17",
    "commander": "^12.1.0",
    "envfile": "^7.1.0",
    "nanoid": "^5.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@types/node": "^20.14.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.5.3"
  },
  "lint-staged": {
    ".env*": [
      "bun run test"
    ],
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged --verbose && echo",
    "post-commit": "bun run test:decrypt"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nrjdalal/commitsafe.git"
  },
  "homepage": "https://github.com/nrjdalal/commitsafe#readme",
  "bugs": {
    "url": "https://github.com/nrjdalal/commitsafe/issues"
  },
  "license": "MIT",
  "keywords": [
    "commitsafe",
    "encrypt",
    "decrypt",
    "env",
    "dotenv",
    "secrets",
    "cli"
  ]
}
